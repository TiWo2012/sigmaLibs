# Comprehensive .clangd Configuration File

# Add custom compile flags (e.g., include paths, C++ standard).
CompileFlags:
  Add: 
    - -I/usr/local/include
    - -Iinclude
    - -std=c++20
    - -Wall
    - -Wextra
    - -Werror
    
# Define diagnostic options for precise error and warning reporting.
Diagnostics:
  Suppress:
    - -Wunused-variable   # Example: suppress specific warnings.
    - -Wunused-parameter
